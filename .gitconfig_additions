# Additional Git configuration for GitHub and Gitea
# Add these to your ~/.gitconfig or run: git config --global --add include.path .gitconfig_additions

# Use SSH for GitHub
[url "git@github.com:"]
    insteadOf = https://github.com/

# Credential helper for Gitea
[credential "http://gitea:3000"]
    helper = manager
    provider = generic

# Optional: Set default push behavior
[push]
    default = simple

# Optional: Set default branch name
[init]
    defaultBranch = main
